/* components/main-list/main-list.wxss */

.main {
  display: flex;
  overflow: hidden;
  justify-content: space-between;
}

.main-left {
  height: 100vh;
  overflow-y: auto;
}

.left {
  background: hsl(202, 83%, 49%);
  width: 25vw;
  height: 120rpx;
  color: #fff;
  font-size: 34rpx;
  padding: 18rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 46rpx;
}

.right-title {
  background: rgba(158, 158, 120, 0.199);
  width: 75vw;
}

.title {
  margin-bottom: 20rpx;
}

/* .main-right {
  height: 100vh;
} */

.listbox {
  height: 100rpx;
}

.productsName {
  width: 160rpx;
}

.inner {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  padding: 0 20rpx 20rpx 10rpx;
}

.icon {
  width: 30%;
  padding-right: 20rpx;
  height: 120rpx;
}

.text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  line-height: 40rpx;
  overflow: hidden;
}

.productsName {
  margin-bottom: 5rpx;
  font-weight: bold;
  font-size: 28rpx;
}

.productsDesc {
  color: #ccc;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.priceSize {
  display: flex;
  justify-content: space-between;
}

.price {
  font-size: 24rpx;
  font-weight: 900;
}

.size {
  font-size: 24rpx;
  border: 1rpx solid #f6f4f8b4;
  border-radius: 40rpx;
  background: rgb(93, 174, 221);
  color: #fff;
}

.menu-scrollbox {
  height: 100%;
}

.scrollbox {
  height: 100vh;
}
.active{
  font-size: 38rpx;
  color:rgb(241, 125, 226);
  font-weight: bold;
}

